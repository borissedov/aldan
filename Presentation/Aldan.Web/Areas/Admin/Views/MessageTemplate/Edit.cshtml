@model MessageTemplateModel

@{
    //page title
    ViewBag.Title = "Edit message template details";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Message templates");
}

<form asp-controller="MessageTemplate" asp-action="Edit" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Edit message template details - @Model.Name
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">back to return message template list</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Save
            </button>

            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Save and Continue Edit
            </button>

            <button type="submit" id="message-template-copy" name="message-template-copy" class="btn bg-green">
                <i class="fa fa-clone"></i>
                Copy
            </button>
            <aldan-action-confirmation asp-button-id="message-template-copy" />
            <span id="message-template-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                Delete
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<aldan-delete-confirmation asp-model-id="@Model.Id" asp-button-id="message-template-delete" />