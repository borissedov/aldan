@model QueuedEmailModel

@{
    //page title
    ViewBag.Title = "Edit message queue item";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Queued emails");
}

<form asp-controller="QueuedEmail" asp-action="Edit" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Edit message queue item
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">back to message queue</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="requeue" class="btn bg-green">
                <i class="fa fa-clone"></i>
                Requeue
            </button>
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Save
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Save and Continue Edit
            </button>
            <span id="queuedEmail-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                Delete
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<aldan-delete-confirmation asp-model-id="@Model.Id" asp-button-id="queuedEmail-delete" />
