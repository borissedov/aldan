@model QueuedEmailModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            <aldan-label asp-for="From" />
                        </div>
                        <div class="col-md-9">
                            <aldan-editor asp-for="From" asp-required="true" />
                            <span asp-validation-for="From"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <aldan-label asp-for="FromName" />
                        </div>
                        <div class="col-md-9">
                            <aldan-editor asp-for="FromName" />
                            <span asp-validation-for="FromName"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <aldan-label asp-for="To" />
                        </div>
                        <div class="col-md-9">
                            <aldan-editor asp-for="To" asp-required="true" />
                            <span asp-validation-for="To"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <aldan-label asp-for="ToName" />
                        </div>
                        <div class="col-md-9">
                            <aldan-editor asp-for="ToName" />
                            <span asp-validation-for="ToName"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <aldan-label asp-for="ReplyTo" />
                        </div>
                        <div class="col-md-9">
                            <aldan-editor asp-for="ReplyTo" />
                            <span asp-validation-for="ReplyTo"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <aldan-label asp-for="ReplyToName" />
                        </div>
                        <div class="col-md-9">
                            <aldan-editor asp-for="ReplyToName" />
                            <span asp-validation-for="ReplyToName"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <aldan-label asp-for="CC" />
                        </div>
                        <div class="col-md-9">
                            <aldan-editor asp-for="CC" />
                            <span asp-validation-for="CC"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <aldan-label asp-for="Bcc" />
                        </div>
                        <div class="col-md-9">
                            <aldan-editor asp-for="Bcc" />
                            <span asp-validation-for="Bcc"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <aldan-label asp-for="Subject" />
                        </div>
                        <div class="col-md-9">
                            <aldan-editor asp-for="Subject" />
                            <span asp-validation-for="Subject"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <aldan-label asp-for="Body" />
                        </div>
                        <div class="col-md-9">
                            <aldan-editor asp-for="Body" asp-template="RichEditor" />
                            <span asp-validation-for="Body"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <aldan-label asp-for="CreatedOn" />
                        </div>
                        <div class="col-md-9">
                            <div class="form-text-row">@Model.CreatedOn</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <aldan-label asp-for="SentTries" />
                        </div>
                        <div class="col-md-9">
                            <aldan-editor asp-for="SentTries" />
                            <span asp-validation-for="SentTries"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <aldan-label asp-for="SentOn" />
                        </div>
                        <div class="col-md-9">
                            @if (Model.SentOn.HasValue)
                            {
                                <div class="form-text-row">@Model.SentOn</div>
                            }
                            else
                            {
                                <div class="form-text-row">Not sent yet</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>